                <div class="container p-5">
                    <div class="row">
                        

                            <form name="chatForm" class="chat-form col-12 col-md-10 offset-md-1 col-xl-8 offset-xl-2">
                                <h1 class="under-construction band-font">Pumpkins Chat</h2>
                                <div class="panel">
                                    <div class="panel-body chat-display">
                                        <p class="text-muted chat-text">Welcome! Add your message using the form below.</p>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="chat-username" class="control-label txt-white-smoke">Name</label>
                                    <div>
                                        <input type="text" class="form-control" id="chat-username" required placeholder="Enter your name">
                                    </div>
                                </div>
            
                                <div class="form-group">
                                    <label for="chat-message" class="control-label txt-white-smoke">Message</label>
                                    <div>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="chat-message" rows="2" autocomplete="off" required placeholder="Enter a message, then press enter">
                                            <span class="input-group-btn ms-1">     
                                                <button id="chat-submit" class="btn btn-primary" type="submit">Submit</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
            
                                
                            </form>
                    </div>
