            <body>
                <div class="container pt-5">
                    <div class="row">
                        <div class="col-12 col-lg-10 offset-lg-1">
                            <article class="albumsList">
                                <% if (albums.length > 1) { %> 
                                    <% albums.forEach(albumObj => { %>
                                        <div class="albumDescriptions">
                                            <h5 class="albumlist-name band-font"><a href="/albums/<%= albumObj.shortname %> "><%= albumObj.albumname %></a></h5>
                                            <div class="container-fluid row m-0">
                                                <a class="col-12 col-md-4" href="/albums/<%= albumObj.shortname %> ">
                                                    <img class="albumlist-img mb-lg-5"
                                                        src="<%= albumObj.artwork[0] %> "
                                                        alt="Photo of <%= albumObj.albumname %> "></a>
                                                <p class="col-12 col-md-8 albumslist-info mb-lg-5 text-light">
                                                    <%= albumObj.summary %> 
                                                </p>
                                            </div>
                                    <% }) %>
                                    <% } %>
                                    </div>
                            </article>
                        <!-- </div> -->
                    </div>
                </div>
