        <main>
            <div class="container pt-5">
                <div class="row">
                    <div class="col-12 col-lg-10 offset-lg-1">
                        <article class="albumsList">
                            <!-- all albums listed on page -->
                            <% if (albums.length > 1) { %> 
                                <% albums.forEach(albumObj => { %>
                                    <div class="albumDescriptions">
                                        <h5 class="albumlist-name band-font"><a href="/albums/<%= albumObj.shortname %> "><%= albumObj.albumname %></a></h5>
                                        <div class="container-fluid row m-0">
                                            <a class="col-12 col-md-4" href="/albums/<%= albumObj.shortname %> ">
                                                <img class="albumlist-img rounded mb-lg-5"
                                                    src="<%= albumObj.artwork[0] %> "
                                                    alt="Photo of <%= albumObj.albumname %> album cover"></a>
                                            <p class="col-12 col-md-8 mt-5 mt-md-0 albumslist-info mb-lg-5 text-light">
                                                <%= albumObj.summary %> 
                                            </p>
                                        </div>
                                <% }) %>
                                <% } else {%>
                                <!-- single album -->
                                <% albums.forEach(albumObj => { %>
                                    <div class="albumDescriptions">
                                        <h5 class="albumlist-name band-font"><a href="/albums/<%= albumObj.shortname %> "><%= albumObj.albumname %></a></h5>
                                        <div class="container-fluid row m-0">
                                            <a class="col-12 col-md-4" href="/albums/<%= albumObj.shortname %> ">
                                                <img class="albumlist-img rounded mb-lg-5"
                                                    src="/<%= images[0] %> "
                                                    alt="Photo of <%= albumObj.albumname %> album cover."></a>
                                            <p class="col-12 col-md-8 mt-5 mt-md-0 albumslist-info mb-lg-5 text-light">
                                                <%= albumObj.summary %> 
                                            </p>
                                        </div>
                                        <div class="container-fluid row m-0">
                                            <div class="col-12 col-md-4">
                                                <h3 class="band-font section-title">Tracks</h3>
                                                <ol class="text-light">
                                                    <% tracks.forEach(track => { %>
                                                    <li><%= track %> </li>
                                                    <% }) %>
                                                </ol>
                                            </div>
                                            <% if (albumObj.albumAM !== "") {%>

                                            <div class="col-12 col-md-8 ">
                                                <h3 class="band-font section-title">Listen</h3>
                                                <a href="<%= albums[0].albumAM %>" target="_blank"><img src="/images/apple_music_logo.png" alt="Apple Music logo" class="apple-music-link-img"></a> 
                                                <a href="<%= albums[0].albumSM %>" target="_blank"><img src="/images/spotify-badge-button.png" alt="Apple Music logo" class="spotify-music-link-img"></a> 
                                            </div>
                                            <% } %> 
                                            
                                        </div>
                                    </div>
                                <% }) %>
                                <% } %> 
                        </article>
                    </div> <!-- closes albums div -->
                    <div class="col-12 col-lg-10 offset-lg-1">
                        <p class="text-center sub-text pt-5">Read more about these albums on 
                            <a href="https://en.wikipedia.org/wiki/The_Smashing_Pumpkins_discography" target="_blank">Wikipedia</a>
                        </p>
                    </div>
                </div> <!-- closes "row" div-->
            </div>
        </main>
    
